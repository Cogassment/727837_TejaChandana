
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        tr:nth-child(even) {
            background-color: papayawhip;
        }
        
    </style>
</head>
<body>
    
    <table  id="page" class="table table-striped table-bordered">
        <thead style="background-color:royalblue">
            <tr>
                <th>
                    EmployeeId
                </th>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    EmailId
                </th>
                <th>
                    ProjectId
                </th>
                <th>
                    ProjectName
                </th>
            </tr>
        </thead>
        <tbody style="background-color:aliceblue"></tbody>
    </table>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                url: "/Pagination/Display",
                data: ' ',
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                success: function (response) {
                    var trHTML = '';
                    $('#page tbody').empty();
                    $.each(response, function (i, item) {
                        trHTML += '<tr>'
                        trHTML += '<td>' + item.EmployeeId + '</td>' +
                            '<td>' + item.FirstName + '</td>' +
                            '<td>' + item.LastName + '</td>' +
                            '<td>' + item.EmailId + '</td>' +
                            '<td>' + item.ProjectId + '</td>' +
                            '<td>' + item.ProjectName + '</td>';
                        trHTML += '</tr>'
                    });
                    $('#page tbody').append(trHTML);
                    $('#page').html();
                    $('#page').DataTable();
                },
            });
        });
    </script>
</body>
</html>
